<Window x:Class="PointOfSale.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PointOfSale"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1480">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height=".125*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <local:OrderControl Grid.Row="0" Grid.ColumnSpan="2"/>
        <local:MenuItemSelecctionControl Grid.Row="1" Grid.RowSpan="2" Grid.ColumnSpan="2"/>
        <local:OrderSummaryControl Grid.Column="2" Grid.RowSpan="3"/>
    </Grid>
</Window>
