<UserControl x:Class="PointOfSale.CustomizeTrailburger"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <TextBlock FontSize="30" Text="Customize Trailburger" Margin="10"/>
            <CheckBox IsChecked="{Binding Path=Bun}" Content="Bun" FontSize="24"/>
            <CheckBox IsChecked="{Binding Path=Ketchup}" Content="Ketchup" FontSize="24"/>
            <CheckBox IsChecked="{Binding Path=Mustard}" Content="Mustard" FontSize="24"/>
            <CheckBox IsChecked="{Binding Path=Pickle}" Content="Pickle" FontSize="24"/>
            <CheckBox IsChecked="{Binding Path=Cheese}" Content="Cheese" FontSize="24"/>
        </StackPanel>
    </Grid>
</UserControl>
