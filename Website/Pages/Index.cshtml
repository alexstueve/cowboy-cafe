@page

@using CowboyCafe.Data

@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>

<h1>Cowboy Cafe</h1>

<p>
    We at Cowboy Cafe are proud to bring you authentic trail meals from the American West.
    Shake off the dust on your boots and sake your thirst with one of our old-fashioned
    hand-jerked sodas. Dip your Pan de Campo into a bowl of beans. Or conquer the the mighty
    Texas Triple Burger! You’ve had a hard ride - so take it easy with us.
</p>

<h2>Entrees</h2>
@foreach (IOrderItem item in Menu.Entrees())
{
    <div class="menu-item">
        <h6 class="item-name">@item.GetType().Name</h6>
        <div class="item-info">$@item.Price.ToString()</div>
        <div class="item-info">@item.Calories.ToString() Calories</div>
    </div>
}

<h2>Sides</h2>
@foreach (IOrderItem item in Menu.Sides())
{
    <div class="menu-item">
        <h6 class="item-name">@item.GetType().Name</h6>
        @{ item.Size = Size.Small; }
        <div class="item-info">@item.Size.ToString(): $@item.Price.ToString(), @item.Calories.ToString() Calories</div>
        @{ item.Size = Size.Medium; }
        <div class="item-info">@item.Size.ToString(): $@item.Price.ToString(), @item.Calories.ToString() Calories</div>
        @{ item.Size = Size.Large; }
        <div class="item-info">@item.Size.ToString(): $@item.Price.ToString(), @item.Calories.ToString() Calories</div>
    </div>
}

<h2>Drinks</h2>
@foreach (IOrderItem item in Menu.Drinks())
{
    <div class="menu-item">
        <h6 class="item-name">@item.GetType().Name</h6>
        @{ item.Size = Size.Small; }
        <div class="item-info">@item.Size.ToString(): $@item.Price.ToString(), @item.Calories.ToString() Calories</div>
        @{ item.Size = Size.Medium; }
        <div class="item-info">@item.Size.ToString(): $@item.Price.ToString(), @item.Calories.ToString() Calories</div>
        @{ item.Size = Size.Large; }
        <div class="item-info">@item.Size.ToString(): $@item.Price.ToString(), @item.Calories.ToString() Calories</div>
    </div>
}
